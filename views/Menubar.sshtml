<div class="mytitle">
    <ul class="menu">
        <a class="bl" href="@Model.Ent.Link" style="background:@Model.Ent.Color">@Model.Ent.Name</a>
        @Each.Lists
            <li>
                <a class="bl" style="background:@Current.Color">@Current.Name</a>
                <ul class="submenu">
                    @Partial['MenubarSubmenu', Current.Sub]
                </ul>
            </li>
        @EndEach
    </ul>
</div>